{{#*inline "header-block"}}
<link rel="stylesheet"
    href="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@9.17.1/build/styles/github.min.css">
<style>
    code {
        font-family: Consolas, Menlo, Monaco, Consolas, "Courier New", monospace;
        color: #e83e8c;
        font-size: 0.85em;
        padding: 2px 4px;
        font-size: 0.85em;
        text-shadow: none;
        word-wrap: break-word;
        white-space: pre;
    }

    #article-body p {
        text-indent: 2em;
        font-size: .95rem;
    }

    #article-body h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-weight: bold;
    }

    #article-body h1{
        font-size: 1.5rem;
    }

    #article-body h2{
        font-size: 1.4rem;
    }

    #article-body h3{
        font-size: 1.35rem;
    }

    #article-body h4{
        font-size: 1.3rem;
    }

    #article-body h5{
        font-size: 1.2rem;
    }

    #article-body h6{
        font-size: 1.15rem;
    }

    #article-body img {
        display: block;
        padding: .25rem;
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: .25rem;
        max-width: 100%;
        height: auto;
    }

    .article-title {
        font-size: 1.6rem;
        font-weight: normal;
    }

    .article-publish-info {
        font-size: .75rem;
    }

    .article-header-hr {
        margin-bottom: 5px;
    }

    .copyright-item {
        font-size: .8rem;
        line-height: .8rem;
    }

    #article-body a {
        color: #2a579a;
    }

    .copyright-item a{
        color: #ba2f7b;
    }

    .hljs {
        padding: 10px 20px;
        border: 1px solid #d3d6db;
    }

    /*导航*/
    .BlogAnchor {
        background: #f4f7f9;
        padding: 10px;
        line-height: 180%;
    }
    .BlogAnchor p {
        font-size: 18px;
        margin-bottom: 0;
    }
    .BlogAnchor .AnchorContent {
        padding: 5px 0px;
    }
    .BlogAnchor li{
        font-size: .85rem;
        list-style: none;
        border-left: 2px solid #d3d6db;
    }
    #AnchorContentToggle {
        font-size: 13px;
        font-weight: normal;
        color: #FFF;
        display: inline-block;
        line-height: 20px;
        background: #2a579a;
        font-style: normal;
        padding: 1px 8px;
        margin-right: 10px;
    }
    .BlogAnchor a:hover {
        color: #ba2f7b;
    }
    .BlogAnchor a {
        text-decoration: none;
    }

    .atricle-directory{
        position: sticky;
        top: 4rem;
        height: calc(100vh - 4rem);
        overflow-y: auto;
    }

</style>
<script>
    $(document).ready(function(){
        $("#article-body").find("h2,h3,h4,h5,h6").each(function(i,item){
            var tag = $(item).get(0).localName;
            $(item).attr("id","wow"+i);
            $("#AnchorContent").append('<li><a class="new'+tag+' anchor-link" href="#wow'+i+'">'+ $(this).text() +'</a></li>');
            var indent = 14;
            $(".newh2").css("margin-left", 4);
            $(".newh3").css("margin-left",indent * 1);
            $(".newh4").css("margin-left",indent * 2);
            $(".newh5").css("margin-left",indent * 3);
            $(".newh6").css("margin-left",indent * 4);
        });
        $("#AnchorContentToggle").click(function(){
            var text = $(this).html();
            if(text=="目录 [-]"){
                $(this).html("目录 [+]");
                $(this).attr({"title":"展开"});
            }else{
                $(this).html("目录 [-]");
                $(this).attr({"title":"收起"});
            }
            $("#AnchorContent").toggle();
        });
    });
</script>
{{/inline}}

{{#*inline "content"}}
<div class="container">
    <div class="row">
        <section class="col-lg-9 col-md-12">
            <article>
                <header>
                    <h1 class="article-title">{{ title }}</h1>
                    <hr class="d-none d-md-block article-header-hr">
                    <div class="d-block d-sm-none">
                        <div class="article-publish-info article-publish-info-mobile bg-light">
                            <time>Published on {{ create_at }}</time>
                        </div>
                    </div>
                    <div class="d-none d-sm-block article-publish-info mb-2">
                        <strong class="text-muted">
                            <time>Published on {{ create_at }}</time>
                        </strong>
                        <span class="badge badge-secondary float-right post-hit-number d-none d-md-block">{{visit_count}} Reads</span>
                    </div>
                    <div class="hidden-print">
                        <section class="article-cat-tag-info">
                            <a href="#" class="badge badge-primary">{{ category }}</a>
                            <div class="float-right d-none d-md-block">
                                {{!-- <span class="toptags-list toptags-list-sm">
                                    <a href="/tags/list/azure">Azure</a>
                                    <a href="/tags/list/dotnet-core">.NET Core</a>
                                    <a href="/tags/list/cdn">CDN</a>
                                </span> --}}
                            </div>
                        </section>
                    </div>
                    <hr class="article-header-hr">
                </header>
                
                <div id="article-body">{{markdown body}}</div>
                <hr>
                <section class="article-copyright">
                    <p class="copyright-item">
                        <span>Author:</span>
                        <span>Yonghua</span>
                    </p>
                    <p class="copyright-item">
                        <span>License:</span>
                        <span>本文采用 知识共享<a target="_blank" href="http://creativecommons.org/licenses/by-nc-nd/4.0/">
                                署名-非商业性使用-禁止演绎4.0(CC BY-NC-ND 4.0)国际</a>许可协议 进行许可</span>
                    </p>
                </section>
                <hr>
                <section>
                    <script src="https://utteranc.es/client.js" repo="dayang/BlogComments" issue-term="pathname"
                        label="Comment" theme="github-light" crossorigin="anonymous" async>
                        </script>
                </section>
            </article>
        </section>
        <div class="col-lg-3 d-lg-block d-none d-ms-none d-md-none atricle-directory">
            <div class="BlogAnchor">
                <p>
                    <b id="AnchorContentToggle" title="收起" style="cursor:pointer;">目录 [-]</b>
                </p>
                <div class="AnchorContent" id="AnchorContent"> </div>
            </div>
        </div>
    </div>
</div>
{{/inline}}

