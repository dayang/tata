{{#*inline "header-block"}}
<link rel="stylesheet" href="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@9.17.1/build/styles/tomorrow-night-blue.min.css">
<style>
     code {
        font-family: "Source Code Pro",Menlo,Monaco,Consolas,"Courier New",monospace;
        color: hsl(328.3636363636364,80.4922279793%,48.1568627451%);
        font-size: 0.85em;
        padding: 2px 4px;
        font-size: 0.85em;
        text-shadow: none;
        word-wrap: break-word;
        white-space: pre;
    }

    #article-body p {
        text-indent: 2em;
    }

    #article-body h1,h2,h3,h4,h5,h6 {
        color: #555;
    }

    .article-title{
        font-family: Lato,"Microsoft YaHei",sans-serif;
        font-size: 2rem;
        font-weight: 900;
        {{!-- margin: 0.5em 0 0.25em 0; --}}
        padding-bottom: 0.2em;
    }

    .article-meta{
        font-size: .8rem;
        color: #777;;
    }

    .loader {
        box-sizing: content-box;
        display: block;
        position: absolute;
        top: 50%;
        left: 50%;
        margin: 0;
        text-align: center;
        z-index: 1000;
        -webkit-transform: translateX(-50%) translateY(-50%);
        transform: translateX(-50%) translateY(-50%);
    }

    .loader:before {
        position: absolute;
        content: '';
        top: 0;
        left: 50%;
        width: 40px;
        height: 40px;
        margin: 0 0 0 -20px;
        border-radius: 40px;
        border: 4px solid rgba(0, 0, 0, .1);
    }

    .loader:after {
        position: absolute;
        content: '';
        top: 0;
        left: 50%;
        width: 40px;
        height: 40px;
        margin: 0 0 0 -20px;
        animation: loader .6s linear;
        animation-iteration-count: infinite;
        border-radius: 50px;
        border: 4px solid transparent;
        border-top-color: #10aec2;
        box-shadow: 0 0 0 1px transparent;
    }

    @keyframes loader {
        from {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
        }

        to {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
        }
    }

    .article-category{
        display: inline-block;
        margin: 0 4px;
        color: #D0648A;
        font-weight: 500;
    }

    .article-copyright {
        margin-top: 5rem;
        border-top: 1px solid #e8e8e8;
        border-bottom: 1px solid #e8e8e8;
    }

    .copyright-item{
        font-size: .8rem;
        line-height: .8rem;
    }
</style>
{{/inline}}

{{#*inline "content"}}
<div>
    <div class="loader"></div>
    <div class="article-title">📃 {{ title }}</div>
    <div class="article-meta">
        <span class="article-category">{{ category }}</span> 
        <span>{{ create_at }}</span>
        &nbsp;&nbsp;<span><i class="fas fa-eye"></i> {{ visit_count }}</span>
    </div>
    <div id="article-body"> </div>
    <section class="article-copyright">
        <p class="copyright-item">
            <span>Author:</span>
            <span>Yonghua</span>
        </p>
        <p class="copyright-item">
            <span>License:</span>
            <span>本文采用 知识共享<a target="_blank" href="http://creativecommons.org/licenses/by-nc-nd/4.0/"> 署名-非商业性使用-禁止演绎4.0(CC BY-NC-ND 4.0)国际</a>许可协议 进行许可</span>
        </p>
    </section>
    <section>
        <script src="https://utteranc.es/client.js"
            repo="dayang/BlogComments"
            issue-term="pathname"
            label="Comment"
            theme="github-light"
            crossorigin="anonymous"
            async>
    </script>
    </section>
</div>
{{/inline}}

{{#*inline "script-block"}}
<script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdn.bootcss.com/markdown-it/10.0.0/markdown-it.min.js"></script>
<script src="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@9.17.1/build/highlight.min.js"></script>
<script>
    $(document).ready(function() {
        $.get("/article/article-body/{{id}}", function(data) {
            $(".loader").remove();
            var md = window.markdownit({
                breaks: true,
            });
            var article_body = $("#article-body");
            var result = md.render(data);
            article_body.html(result);
            hljs.initHighlighting();
        })
    })
</script>
{{/inline}}

