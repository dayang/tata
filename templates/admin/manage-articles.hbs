{{#*inline "content"}}
<div class="row">
    <div class="col-md-12">
        <div class="card card-outline card-primary">
            <div class="card-header">
                <button type="button" class="btn btn-success btn-xs"><i class="fas fa-plus"> 新建</i></button>
            </div>
            <div class="card-body" style="display: block;">
                <table class="table table-bordered table-sm">
                    <thead>                  
                        <tr>
                            <th>编号</th>
                            <th>标题</th>
                            <th>分类</th>
                            <th>创建时间</th>
                            <th>访问次数</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each articles}}
                        <tr>
                            <td>{{ id }}</td>
                            <td><a href="/article/{{ id }}">{{ title }}</a></td>
                            <td>{{ category }}</td>
                            <td>{{ create_at }}</td>
                            <td>{{ visit_count }}</td>
                            <td>
                                {{#if published}}
                                <button class="btn btn-xs btn-outline-primary">已发布</button>
                                {{else}}
                                <button class="btn btn-xs btn-outline-secondary">未发布</button>
                                {{/if}}
                            </td>
                            <td>
                                <button class="btn btn-primary btn-xs">更新</button>
                                <button class="btn btn-danger btn-xs">删除</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{{/inline}}
{{~> admin/layout ~}}