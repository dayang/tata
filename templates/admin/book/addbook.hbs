<div class="layuimini-main">

    <div class="layui-form layuimini-form">
        <div class="layui-form-item">
            <label class="layui-form-label required">Name</label>
            <div class="layui-input-block">
                <input type="text" name="name" lay-verify="required" lay-reqtext="Name不能为空" class="layui-input">
                <tip>url中显示的英文名称，不能重复</tip>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">标题</label>
            <div class="layui-input-block">
                <input type="text" name="display_text" lay-verify="required" lay-reqtext="标题不能为空" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">封面图片链接</label>
            <div class="layui-input-block">
                <input type="text" name="cover" value="{{book.cover}}" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">上传图片</label>
            <div class="layui-input-block">
                <button type="button" id="upload-img-btn" class="layui-btn">上传图片</button>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">描述</label>
            <div class="layui-input-block">
                <textarea name="description" lay-verify="required" lay-reqtext="描述不能为空" placeholder="请输入描述"
                            class="layui-textarea"></textarea>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">是否发布</label>
            <div class="layui-input-block">
                <input type="checkbox" name="published" lay-skin="switch" lay-text="发布|不发布" value="true">
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="saveBtn">确认保存</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    layui.use(['form', 'upload', 'layer'], function () {
        var form = layui.form,
            layer = layui.layer,
            upload = layui.upload,
            $ = layui.$;

        /**
         * 初始化表单，要加上，不然刷新部分组件可能会不加载
         */
        form.render();

        upload.render({
            elem: '#upload-img-btn',
            url: '/upload/',
            accept: 'images',
            acceptMime: 'image/*',
            done: function(res){
                layer.open({
                    title: "上传成功",
                    shadeClose: false,
                    content: '\<input type="text" class="layui-input" id="img-src-link" readonly value="图片链接">\<\/input>',
                    btn: ['复制链接'],
                    btnAlign: 'c',
                    yes: function(index, layero){
                        layero.context.getElementById("img-src-link").select();
                        document.execCommand("Copy");
                        layer.close(index);
                    }
                });
            },
            error: function(){
                layer.msg("出错了", {icon: 2});
            }
        });

        // 当前弹出层，防止ID被覆盖
        var parentIndex = layer.index;

        //监听提交
        form.on('submit(saveBtn)', function (data) {
            var field = data.field;
            $.ajax("/admin/books/add", {
                method: "post",
                contentType: "application/json",
                dataType: "json",
                data: JSON.stringify({
                    id: 0,
                    name: field.name,
                    display_text: field.display_text,
                    description: field.description,
                    cover: field.cover,
                    published: field.published === 'true',
                    create_time: ''
                }),
                success: function(data) {
                    if(data.Ok) {
                        layer.msg("添加成功，刷新显示", {time: 1000 }, function () {
                            layer.close(parentIndex);
                        });
                    } else {
                        layer.msg(data.Err);
                    }
                }
            });
            return false;
        });

    });
</script>