{{#*inline "title"}}
{{ viewbag.title }}
{{/inline}}

{{#*inline "header-block"}}
<style>

.tag-link{
    display: inline-block;
    background-color: #2474b5;
    border-radius: 5px;
    padding: 0 7px;
    margin: 5px;
    color: #fff;
}


.tag-link:hover{
    color: white;
    background-color: #1485FE;
    transition: all .5s ease;
}
</style>
{{/inline}}

{{#*inline "content"}}
<div class="layui-card">
    <div class="layui-card-header">{{ viewbag.list_title }}</div>
    <div class="layui-card-body">
        {{#each tags}}
            <a class="tag-link" href="/posts/tag/{{name}}">{{ display_text }}</a>
        {{/each}}
    </div>
    <div id="pagination"></div>
</div>
{{/inline}}

