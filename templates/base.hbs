        }
        a, a:hover{
            text-decoration: none;
            color: inherit;
        }

        .page{
            background-color: #fff;
            box-shadow: 0 0 12px #9e9e9e;
        }

        .tata-header{
            height: 110px;
            border-bottom: 1px solid rgba(0,0,0,0.2);
        }

        .tata-header-mb{
            height: 60px;
            border-bottom: 1px solid rgba(0,0,0,0.2);
        }

        .tata-brand-area {
            height: 100%;
            text-align: center;
        }

        .logo-text {
            position: relative;
            top: 50%;
            transform: translateY(-50%);
        }

        .tata-header .logo-text a{
            display: block;
            font-weight: 700;
            color: #34495e;
            font-size: 30px;
            cursor: pointer;
            text-align: left;
        }

        .tata-header-mb .logo-text a{
            display: inline-block;
            font-weight: 700;
            color: #34495e;
            font-size: 25px;
            cursor: pointer;
            text-align: left;
        }


        .tata-nav-area{
            text-align: center;
            height: 100%;
        }

        .tata-nav{
            border-bottom: 1px solid rgba(56, 56, 56, 1);
            border-top: 1px solid rgba(56, 56, 56, 1);
            position: relative;
            top: 50%;
            transform: translateY(-50%);
        }

        .tata-nav .nav-item{
            display: inline;
            margin: 0 30px;
        }

        .tata-nav .nav-item a{
            display: inline-block;
            padding: 7px 0;
            font: normal normal 15px / 23px "微软雅黑",Helvetica,Arial,Verdana,sans-serif;
        }

        .tata-nav .nav-item a:hover{
            color: #2474b5;
            transition: color 0.3s ease;
        }

        .tata-nav .active{
            color: #2474b5;
            font-weight: 600;
        }

        .tata-nav-side .nav-item a{
            display: block;
            padding: 10px;
            text-align: center;
            color: #ddd;
            border-bottom: 1px dotted #2474b5;
        }

        .tata-nav-side .nav-item a:hover{
            color: #fff;
            transition: color 0.3s ease;
        }

        .search-area{
            height: 100%;
            text-align: center;
            padding: 20px;
        }

        .search-form {
            display: inline-block;
            position: relative;
            top: 50%;
            transform: translateY(-50%);
        }
        
        .collapse-btn{
            height: 100%;
            text-align: center;
        }

        .collapse-btn button{
            position: relative;
            top: 50%;
            transform: translateY(-50%);
        }

        #search-button{
            display: inline-block;
            height: 32px;
            width: 32px;
            text-align: center;
            background-color: #2474b5;
            vertical-align:top;
            line-height: 32px;
            border-top: 1px;
            border-bottom: 1px;
            border-right: 1px;
            border-left: 0;
            border-color: #666666;
            border-style: solid;
            color: white;
            cursor: pointer;
        }

        #search-input{
            border: 1px solid #666666;
            color: #8d9095;
            font-size: 13px;
            line-height: 15px;
            padding: 0 5px;
            height: 30px;
            width: 120px;
        }

        .tata-footer{
            text-align: center;
            padding: 20px 0;
            border-top: 1px solid rgba(0,0,0,0.2);
        }

        .tata-footer p{
            font-size: .75rem;
            margin: 3px 0;
            color: #a9a9b3;
            text-transform: uppercase;
        }

        .tata-footer a {
            color: #2474b5;
        }

        #main-content{
            padding: 20px;
        }

        #tata-left-side{
            padding: 20px 0 20px 20px;
        }

        .tata-quote{
            text-indent: 2rem;
            padding: 5px;
            border: 1px dotted #acc4ac;
            font-family: FangSong,SimSun,STSong,sans-serif;
            line-height: 1.2rem;
        }

        .left-header{
            font-weight: 800;
            border-bottom: 2px solid #ddd;
            color: #666666;
            margin: 10px 0;
            padding: 4px 0;
        }

        .post-categorys a{
            color: #666666;
            display: block;
            margin: 10px 5px;
        }

        .post-categorys a:hover{
            color: #2474b5;
        }

        .post-categorys .active{
            color: #2474b5;
        }

        .user-info li {
            padding: 4px 0;
        }

        .user-info li .icon-symbol{
            margin-right: 5px;
        }

        .user-info li a{
            color: #2474b5;
        }
        
        .user-img{
            border: 1px dotted #ddd;
            margin-bottom: 10px;
        }

        .icon-symbol {
            width: 1em;
            height: 1em;
            vertical-align: -0.15em;
            fill: currentColor;
            overflow: hidden;
        }

    </style>
</head>
