<script src="https://www.layuicdn.com/layui-v2.5.6/layui.js"></script>
<script>
    layui.use(['jquery','util'], function(){
        var $ = layui.jquery;
        var util = layui.util;

        util.fixbar();
        
        $('.side-open-close').each(function(i, e){
            $(e).click(function(){
                $('#tata-side-nav').toggle();
            })
        });

        $('#tata-sice-nav-close').click(function(){
            $('#tata-side-nav').toggle();
        });

        $('.post-categorys a').each(function(i, e) {
            var a = $(e);
            if(location.pathname == a.attr('href')) {
                a.addClass('active');
            }
        });

        $('.tata-nav a').each(function(i, e) {
            var a = $(e);
            if(location.pathname == a.attr('href')) {
                a.addClass('active');
            }
        });

        //监听搜索引擎外部搜索
        var searchAll = function(form){
            $(form).submit(function(){
                var input = $(this).find('input[name="q"]')
                ,val = input.val();

                if(val.replace(/\s/g, '') === ''){
                    return false;
                }

                input.val('site:yyonghua.com '+ input.val());
            });
        };

        searchAll('.search-form');
    });
</script>
